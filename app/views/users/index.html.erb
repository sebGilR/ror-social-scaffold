<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          <%= button_to 'Request Friendship', friendships_path(user: user) %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
